<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ngohome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"

    tools:context="com.example.admin.volunteer.Ngohome">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:id="@+id/button_lay_id"
        android:weightSum="3"
        android:layout_alignParentBottom="true">


        <Button
            android:layout_width="0.5dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="90dp"
            android:layout_marginLeft="20dp"

            android:onClick="openEventsngo"
            android:layout_weight="1"
            android:background="@drawable/events"
            android:textColor="#000"/>

        <Button
            android:layout_width="0.5dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="5dp"


            android:onClick="openaddngoevents"
            android:layout_weight="1"
            android:background="@drawable/add"
            android:textColor="#000"/>


        <Button
            android:layout_width="0.5dp"
            android:layout_height="20dp"
            android:onClick="openaccountngo"
            android:layout_weight="1"
            android:background="@drawable/user"
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"


            android:layout_marginLeft="5dp"
            />


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_lay_id"
        android:id="@+id/frame_id"
        android:background="#53000000">

    </FrameLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Events"
        android:textColor="#000"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:id="@+id/add"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Add"
        android:textColor="#000"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/add"
        android:layout_marginLeft="90dp"
        android:id="@+id/events"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Account"
        android:textColor="#000"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/events"
        android:layout_marginLeft="70dp"

        />


</RelativeLayout>



