<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register_volunteer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2a73724b"
    tools:context="com.example.admin.volunteer.RegisterVolunteer">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:background="@null"
        android:tint="#fff"
        android:onClick="cross_btn"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register as VOLUNTEER"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:id="@+id/volunteer"
        android:textColor="#11ec6c"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/volunteer"
        android:layout_margin="20dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="Volunteer Name"
            android:background="#fff"
            android:textColorHint="#000"
            android:paddingLeft="20dp"
            android:id="@+id/name_et"
            android:textColor="#000"
            android:inputType="textPersonName"
            />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:hint="Mobile"
        android:background="#fff"
        android:textColorHint="#000"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/mobile_et"
        android:textColor="#000"
        android:maxLength="10"
        android:inputType="phone"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="Email"
            android:background="#fff"
            android:textColorHint="#000"
            android:paddingLeft="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/email_et"
            android:textColor="#000"
            android:inputType="textEmailAddress"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="Education"
            android:background="#fff"
            android:textColorHint="#000"
            android:paddingLeft="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/education_et"
            android:textColor="#000"
            android:inputType="text"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="Password"
            android:background="#fff"
            android:textColorHint="#000"
            android:paddingLeft="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/password_et"
            android:textColor="#000"
            android:inputType="numberPassword"/>
        <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:hint="Confirm password"
        android:background="#fff"
        android:textColorHint="#000"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
         android:id="@+id/confirm_et"
         android:textColor="#000"   />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="Select City"
            android:background="#fff"
            android:textColorHint="#000"
            android:paddingLeft="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/city_id"
            android:textColor="#000"
            android:inputType="textPostalAddress"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="Address"
            android:background="#fff"
            android:textColorHint="#000"
            android:paddingLeft="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/address_et"
            android:textColor="#000"
            android:inputType="textPostalAddress"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="SUBMIT"
            android:background="#11ec6c"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/submit_btn"
            />
    </LinearLayout>
    </LinearLayout>
</ScrollView>
</RelativeLayout>
