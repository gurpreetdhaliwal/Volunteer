<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ngohome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.admin.volunteer.Ngohome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/button_lay_id"
        android:weightSum="3"
        android:layout_alignParentBottom="true">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EVENTS"
            android:onClick="openEventsngo"
            android:layout_weight="1"
            android:background="#11ec6c"
            android:textColor="#000"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD EVENTS"
            android:onClick="openaddngoevents"
            android:layout_weight="1"
            android:background="#11ec6c"
            android:textColor="#000"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACCOUNT"
            android:onClick="openaccountngo"
            android:layout_weight="1"
            android:background="#11ec6c"
            android:textColor="#000"/>


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_lay_id"
        android:id="@+id/frame_id">

    </FrameLayout>
</RelativeLayout>



