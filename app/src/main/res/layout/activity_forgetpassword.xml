<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forgetpassword"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f773724b"



    tools:context="com.example.admin.volunteer.forgetpassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/roundrec"
        android:orientation="vertical"
        android:id="@+id/email"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"

        >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter email"
        android:textColorHint="#000"
        android:textColor="#11ec6c"
        android:textSize="30dp"
        android:paddingLeft="20dp"
        android:id="@+id/email_et"





        />

</LinearLayout>
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:textSize="30dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:text="NEXT"
        android:textColor="#11ec6c"
        android:background="#fff"
        android:onClick="next_btn"
        android:id="@+id/next_btn"
        android:textStyle="bold"
        />
</RelativeLayout>
