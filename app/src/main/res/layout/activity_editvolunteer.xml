<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_editvolunteer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.admin.volunteer.editvolunteer">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical"
                android:background="#fff"
                android:id="@+id/linear"

                >
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="NAME"
                 android:textColor="#11ec6c"
                 android:textStyle="bold"
                 android:layout_marginLeft="30dp"
                 android:textSize="20dp"
                 android:layout_marginTop="10dp"
                 />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:hint="Volunteer Name"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:textSize="20dp"
                    android:textColorHint="#fff"
                    android:background="#000"
                    android:paddingLeft="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/name_et"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MOBILE"
                    android:textColor="#11ec6c"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    android:textSize="20dp"
                    android:layout_marginTop="30dp"
                    />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:hint="Mobile"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColorHint="#fff"
                    android:background="#000"
                    android:paddingLeft="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/mobile_et"




                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EMAIL"
                    android:textColor="#11ec6c"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    android:textSize="20dp"
                    android:layout_marginTop="30dp"
                    />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:hint="Email"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColorHint="#fff"
                    android:background="#000"
                    android:paddingLeft="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/email_et"
                    android:enabled="false"



                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EDUCATION"
                    android:textColor="#11ec6c"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    android:textSize="20dp"
                    android:layout_marginTop="30dp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:hint="Education"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColorHint="#fff"
                    android:background="#000"
                    android:paddingLeft="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/education_et"



                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CITY"
                    android:textColor="#11ec6c"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    android:textSize="20dp"
                    android:layout_marginTop="30dp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:hint="City"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColorHint="#fff"
                    android:background="#000"
                    android:paddingLeft="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/city_et"



                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADDRESS"
                    android:textColor="#11ec6c"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    android:textSize="20dp"
                    android:layout_marginTop="30dp"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:hint="Address"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColorHint="#fff"
                    android:background="#000"
                    android:paddingLeft="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/address_et"



                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="UPDATE"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:background="#11ec6c"
                    android:textColor="#000"
                    android:onClick="update_btn"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"


                    />








            </LinearLayout>
        </LinearLayout>



    </ScrollView>












</RelativeLayout>
